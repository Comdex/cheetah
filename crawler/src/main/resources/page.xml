<?xml version="1.0" encoding="utf-8"?>
<!--语法规则：http://jsoup.org/apidocs/org/jsoup/select/Selector.html-->
<pages>
    <site domain="qing.blog.sina.com.cn">
        <keywords>meta[name=keywords]</keywords>
        <content>div[class=feedInfo]</content>
        <images>div[class=imgArea]</images>
        <author>div[class=userInfo] ul > li:first-child</author>
        <fetchInterval>600</fetchInterval><!--单位：秒-->
        <!-- elasticsearch index and type-->
        <index>sina</index>
        <type>qing</type>

        <seedURL>http://qing.blog.sina.com.cn/tag/%E7%BE%8E%E5%A5%B3</seedURL>
        <urlFilter>div[class=itemInfo] a</urlFilter>
        <urlRegex>.*/tj/.*</urlRegex>
    </site>
</pages>