<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 简单推荐器 -->
    <bean id="simpleRecommender" class="com.zhaijiong.stock.recommend.SimpleRecommender">
        <property name="name" value="simple"/>
        <property name="buyStrategy" ref="goldenSpiderBuyStrategy"/>
    </bean>

    <bean id="mintue60MACDRecommender" class="com.zhaijiong.stock.recommend.SimpleRecommender">
        <property name="name" value="simple"/>
        <property name="buyStrategy" ref="minute60BuyStrategy"/>
        <property name="sellStrategy" ref="minute60SellStrategy"/>
    </bean>

    <bean id="mintue15MACDRecommender" class="com.zhaijiong.stock.recommend.SimpleRecommender">
        <property name="name" value="simple"/>
        <property name="buyStrategy" ref="minute15BuyStrategy"/>
        <property name="sellStrategy" ref="minute15SellStrategy"/>
    </bean>

    <bean id="dayMACDRecommender" class="com.zhaijiong.stock.recommend.SimpleRecommender">
        <property name="name" value="simple"/>
        <property name="buyStrategy" ref="dayMACDBuyStrategy"/>
        <property name="sellStrategy" ref="maSellStrategy"/> <!-- 相同卖出策略问题 -->
    </bean>

    <bean id="maRecommender" class="com.zhaijiong.stock.recommend.SimpleRecommender">
        <property name="name" value="simple"/>
        <property name="buyStrategy" ref="maBuyStrategy"/>
        <property name="sellStrategy" ref="maSellStrategy"/>
    </bean>

    <bean id="cheetahRecommender" class="com.zhaijiong.stock.recommend.SimpleRecommender">
        <property name="name" value="cheetah"/>
        <property name="buyStrategy" ref="cheetahBuyStrategy"/>
        <property name="sellStrategy" ref="maSellStrategy"/>
    </bean>

    <!-- 组合推荐器，将简单Recommender组合起来作股票推荐 -->
    <bean id="combinedRecommender" class="com.zhaijiong.stock.recommend.CombinedRecommender">
        <property name="name" value="combined"/>
        <property name="recommenderList">
            <list>
                <ref bean="dayMACDRecommender"/>
                <ref bean="maRecommender"/>
                <ref bean="mintue15MACDRecommender"/>
            </list>
        </property>
    </bean>

    <bean id="goldenSpiderRecommender" class="com.zhaijiong.stock.recommend.GoldenSpiderRecommender">
        <property name="name" value="goldenSpider"/>
    </bean>

    <bean id="macdRecommender" class="com.zhaijiong.stock.recommend.MACDRecommender">
        <property name="name" value="macd"/>
    </bean>



</beans>